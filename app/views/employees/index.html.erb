
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>HonduCaribe</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <%= form_tag employees_path, remote: true, method: :get, class: "js-employees-filter form-inline" do %>
        		<div class="form-group">
        			<%= text_field_tag :q, params[:q], placeholder: "Buscar...", class: "form-control" %>
        		</div>
        		<%= button_tag type: "submit", class: "btn btn-default" do %>
        			<span class="input-group-btn"> Ir!</span>
        		<% end %>
        	<% end %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px; ">
          <div class="x_title">
            <h2>Listado de Empleados</h2>
            <div class="clearfix"></div>
          </div>
          <div style="float: center; border-left: 500px">
            <div class="js-employees-table">
              <%= render partial: "table", locals: { employees: @employees} %>
            </div>
          </div>
          <%= link_to "Cancelar", employees_path%>
        </div>
      </div>
    </div>
  </div>
</div>
